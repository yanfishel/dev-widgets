{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@controllers/*": ["src/controllers/*"],
      "@ipc/*": ["src/ipc/*"],
      "@services/*": ["src/services/*"],
      "@views/*": ["src/views/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
